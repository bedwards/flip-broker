# Flip Broker Environment Variables
# Copy to .env and fill in real values

# Database (Koyeb Postgres)
DATABASE_URL=postgresql://user:password@host:5432/flip_broker

# eBay API (https://developer.ebay.com/)
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
EBAY_REFRESH_TOKEN=your_ebay_refresh_token
EBAY_ENVIRONMENT=sandbox  # sandbox or production

# Claude API (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Scraping (residential proxy service)
SCRAPER_PROXY_URL=http://user:pass@proxy.example.com:8080
SCRAPER_USER_AGENT=Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)

# Application
NODE_ENV=development
PORT=3000
